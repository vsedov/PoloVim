{
   "coc.preferences.snippets.enable": true,
   "coc.preferences.formatOnType":false,


   "diagnostic.enableHighlightLineNumber":true,
   "codeLens.enable":true,
   "signature.enable":true,
   "diagnostic.displayByAle": true,

   "suggest.enablePreview":true,
   "coc.preferences.colorSupport":true,
   "highlight.colors.enable":true,
   "jedi.enable":true,
   "preload":{
      "enabled":true
   },
     // coc setting
  "coc.preferences.silentAutoupdate": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.snippetStatusText": "",
  "coc.preferences.formatOnType": false,
  
  "suggest.completionItemKindLabels": {
    "keyword": " [keyword]",
    "variable": "識[variable]",
    "value": "\uf89f [value]",
    "operator": "\u03a8 [operator]",
    "function": " [function]",
    "reference": "\ufa46 [reference]",
    "constant": "識[constant]",
    "method": " [method]",
    "struct": "\ufb44 [struct]",
    "class": "\uf0e8 [class]",
    "interface": "\uf417 [interface]",
    "text": "\ue612 [text]",
    "enum": "\uf435 [enum]",
    "enumMember": "\uf02b [enumMember]",
    "module": "\uf40d [module]",
    "color": "\ue22b [color]",
    "property": " [property]",
    "field": "\uf9be[field]",
    "unit": "\uf475 [unit]",
    "event": "\ufacd [event]",
    "file": "\uf723 [file]",
    "folder": "\uf114 [folder]",
    "snippet": "\ue60b [snippet]",
    "typeParameter": "\uf728 [type]",
    "default": "\uf29c [default]"
  },  

  "diagnostic.enable":              true,

  "diagnostic.separateRelatedInformationAsDiagnostics": true,
   "tabnine.priority":99,

     // coc-yank
  "yank.priority": 10,
  "yank.highlight.enable": false, // use neovim's built-in instead
  "yank.highlight.duration": 200,
  "yank.list.maxsize": 500,
  "yank.enableCompletion": false,


   "coc.source.omni.filetypes":["py",".py"],
   "diagnostic.refreshAfterSave":true,
   "suggest.removeDuplicateItems":false,
   "coc.source.ultisnips.enable":false,
   "coc.source.neco.shortcut":"VIM",
   "python.trace.server":"messages",
   "coc.preferences.useQuickfixForLocations":true,
   "jedi.startupMessage":true,
   "jedi.trace.server":true,
   "jedi.jediSettings.autoImportModules":[
    // Machine learning modules i use allot are pain to load , i have them load on any python file just in case . 
      "numpy",
      "torch",
      "torchvision"
   ],
   "jedi.executable.command":"jedi-language-server",
   "jedi.completion.disableSnippets":false,
   "jedi.diagnostics.enable":true,
   "jedi.diagnostics.didOpen":false,
   "jedi.diagnostics.didChange":false,
   "jedi.diagnostics.didSave":true,


  "session.directory": "~/.vimbackupfile",

   "diagnostic-languageserver.formatFiletypes":{
      "python":[
         "black",
         "isort",
      ]
   },
   "diagnostic-languageserver.formatters":{
      "black":{
         "command":"black",
         "args":[
            "black",
            "-q",
            "-"
         ]
      },
      "isort":{
         "command":"isort",
         "args":[
            "-q",
            "-"
         ]
      }

   },
   "java.configuration.runtimes":[
      {
         "name":"JavaSE-15",
         "path":"/usr/lib/jvm/java-15-openjdk",
         "default":true
      }
   ],
   "gitignore.enable":{
      "type":"boolean",
      "default":true,
      "description":"Is enable gitignore"
   },
   "gitignore.templates.patch":{
      "type":"object",
      "default":{
         
      },
      "additionalProperties":{
         "type":"string"
      },
      "description":"gitignore patch for exists templates (key and value format)"
   },
   "gitignore.templates.replace":{
      "type":"object",
      "default":{
         
      },
      "additionalProperties":{
         "type":"string"
      },
      "description":"gitignore completely replace the exists templates (key and value format)"
  },
  "rpc.lowerDetailsViewing":"Viewing {filename}",
  "rpc.idleText":"The One True Text Editor",
  "rpc.smallImage":"The One True Text Editor",
}
